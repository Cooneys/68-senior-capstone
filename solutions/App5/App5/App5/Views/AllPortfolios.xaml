<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App5.Views.AllPortfolios">
    <ContentPage.Content>
        <ListView x:Name="portfolioListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout>
                            <Label Text="Test ListView item"/>
                            <Label Text="{Binding Name}"/>
                            <Label Text="{Binding TotalValue}"/>

                            <Button x:Name="FetchPortfolios" Text="fetch"/>
                        </StackLayout>

                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>


        </ListView>
    </ContentPage.Content>
</ContentPage>